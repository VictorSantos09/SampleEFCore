@inject IService<MovieModel> _service

<MudSelect @bind-Value="_movie" Label="Filme" Text="Selecione o filme" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in _movies)
    {
        <MudSelectItem T="MovieModel" Value="item">@item.Title</MudSelectItem>
    }
</MudSelect>

@code {
    private IEnumerable<MovieModel> _movies = new List<MovieModel>();
    private MovieModel _movie = new();

    protected override async Task OnInitializedAsync()
    {
        _movies = await _service.GetAllAsync();
    }
}
