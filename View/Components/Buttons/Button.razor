@inherits MudButton
<MudButton Variant="BVariant" Style="@($"color:{BColorText};background-color:{BColorBackground};")"
Color="BColor" OnClick="@BOnClick" DisableElevation="HasElevation">
    @if (BIcon is not null)
    {
        <MudIcon Icon="@BIcon" />
    }
    @Message
</MudButton>

@code {
    [Parameter]
    public Variant BVariant { get; set; } = Variant.Filled;
    [Parameter]
    public Color BColor { get; set; } = Color.Primary;
    [Parameter]
    public string Message { get; set; }
    [Parameter]
    public bool HasElevation { get; set; } = true;
    [Parameter]
    public EventCallback BOnClick { get; set; }
    [Parameter]
    public string? BIcon { get; set; } = null;
    [Parameter]
    public string BColorText { get; set; }
    [Parameter]
    public string BColorBackground { get; set; } = Colors.LightBlue.Default;
}