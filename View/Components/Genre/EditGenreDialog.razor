@inject GenreService _service
@inject NavigationManager _navManager

<MudDialog>
    <DialogContent>
        <MudPaper Class="pa-4">
            <MudForm @ref="_form" @bind-IsValid="@_success">
                <MudTextField T="string" Text="@GenreName" Label="Nome" Required="true" @bind-Value="Name"
                              Counter="45" MaxLength="45" Immediate="true"
                              Validation="@(new Func<string, IEnumerable<string>>(GenreValidator.MaxDigitsName))" RequiredError="Nome do gênero é necessário" />
            </MudForm>
        </MudPaper>
        <MudPaper Class="d-block pa-4 mt-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" OnClick="@(() => Submit())">Salvar</MudButton>
        </MudPaper>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public int Id { get; set; }
    [Parameter]
    public string GenreName { get; set; }
    private bool _success;
    private MudForm _form;
    private string Name;

    private async Task Submit()
    {
        if (Name == GenreName)
            return;

        await _form.Validate();
        if (_form.IsValid)
        {
            GenreModel genre = await _service.GetByIdAsync(Id);
            genre.Name = Name;
            await _service.UpdateAsync(Id, genre);
            _navManager.NavigateTo(_navManager.Uri, true);
        }
    }
}
