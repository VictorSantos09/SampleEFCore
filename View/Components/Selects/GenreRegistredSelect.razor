@inject IService<GenreModel> _service

<MudSelect @bind-Value="_genre" Label="Gênero" Text="Selecione o gênero" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in _genres)
    {
        <MudSelectItem T="GenreModel" Value="item">@item.Name</MudSelectItem>
    }
</MudSelect>

@code {
    private IEnumerable<GenreModel> _genres = new List<GenreModel>();
    private PersonModel _genre = new();

    protected override async Task OnInitializedAsync()
    {
        _genres = await _service.GetAllAsync();
    }
}
