@inherits MudSelect<GenreModel>

<MudSelect T="GenreModel" Label="Gênero" Text="Selecione o gênero" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    @foreach (var item in _genres)
    {
        <MudSelectItem T="GenreModel" Value="item">@item.Name</MudSelectItem>
    }
</MudSelect>

@code {
    [Inject]
    private IService<GenreModel> GenreService { get; set; }
    private IEnumerable<GenreModel> _genres = new List<GenreModel>();

    protected override async Task OnInitializedAsync()
    {
        _genres = await GenreService.GetAllAsync();
    }
}